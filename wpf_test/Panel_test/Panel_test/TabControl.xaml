<Window x:Class="Panel_test.TabControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Panel_test"
        mc:Ignorable="d"
        Title="TabControl" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="1번 탭">
                <UniformGrid Rows="2" Columns="3" Background="BlueViolet">
                </UniformGrid>
            </TabItem>
            <TabItem Header="2번 탭">
                <WrapPanel Background="LightYellow">
                </WrapPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
