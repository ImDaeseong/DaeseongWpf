<Window x:Class="Panel_test.DockPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Panel_test"
        mc:Ignorable="d"
        Title="DockPanel" Height="450" Width="800">
    
    <Grid>
        <DockPanel Background="Red">
            <Button Content="Top" DockPanel.Dock="Top" Margin="5" />
            <Button Content="Left" DockPanel.Dock="Left" Margin="5" />
            <Button Content="Right" DockPanel.Dock="Right" Margin="5" />
            <Button Content="Bottom" DockPanel.Dock="Bottom" Margin="5" />
            <Button Content="Center" Margin="5" />
        </DockPanel>
    </Grid>
    
</Window>
